<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("script", required: false)
</head>
<body>
    <img src="~/wwwroot/images/oreilly_header.gif"/>
    <img src="~/wwwroot/images/oranet_logo.jpg" />
    <table>
        <tr>
            <td><button>@Html.ActionLink("Trang chủ", "Index", "Home")</button></td>
            <td><button>@Html.ActionLink("Giới thiệu", "About", "Home")</button></td>
            <td><button>@Html.ActionLink("Liên hệ", "Contact", "Home")</button></td>
        </tr>
    </table>
