    <div>
        <h1>@RenderSection("header", required: true)</h1>
        @RenderSection("SlideShow",required:false)
        @RenderBody()
    </div>
    <hr/>
    <h4>Copyright &copy; 2020 - Học lập trình web - Đoàn Duy Nam</h4>
</body>
</html>
